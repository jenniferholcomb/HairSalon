@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details<h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name):
    @Html.DisplayFor(model => model.Name)</h3>
<hr />
<h5>@Html.DisplayNameFor(model => model.Specialty):
    @Html.DisplayFor(model => model.Specialty)</h5>

<h5>@Html.DisplayNameFor(model => model.Rate): $
    @Html.DisplayFor(model => model.Rate)</h5>
<hr />

@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added to this stylist yet.</h3>
}
else
{
  <h3>Clients:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients",
                           new { id = client.ClientId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new client", "Create", "Clients")</p>
<p>@Html.ActionLink("Back to stylist list", "Index")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>